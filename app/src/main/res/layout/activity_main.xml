<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:id="@+id/university"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txMyUniversity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/university"/>

    <TextView
            android:id="@+id/txMyUniversity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My University"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/faculties"
            android:textSize="24sp"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/faculties"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/departments"
            android:text="ФАКУЛЬТЕТЫ"
            android:layout_margin="@dimen/standard_margin"
            android:textStyle="italic"
            android:textSize="16sp"/>
    <Button
            android:id="@+id/departments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/teachers"
            android:layout_margin="@dimen/standard_margin"
            android:text="КАФЕДРЫ"
            android:textSize="16sp"
            android:textStyle="italic"/>
    <Button
            android:id="@+id/teachers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/standard_margin"
            android:text="Учителя"
            android:textStyle="italic"
            android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>